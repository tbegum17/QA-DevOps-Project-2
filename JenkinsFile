pipeline {
    agent any 
    stages {

        stage('Build and push images') {
            environment {
                DOCKER_UNAME = credentials('tbegum15')
                DOCKER_PWORD = credentials('Docker@2345')
            }
            steps {
                sh "docker-compose build --parallel"
                sh "docker login -u $DOCKER_UNAME -p $DOCKER_PWORD"
                sh "docker-compose push"
            }
        }
        
    }
         
}

